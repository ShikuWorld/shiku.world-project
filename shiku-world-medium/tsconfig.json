{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@/client/*": ["./client/*"],
      "@/editor/*": ["./editor/src/*"],
      "@/shared/*": ["./shared/*"]
    },
    "strict": true
  },
  "include": ["plugins/**/*.ts", "shared/**/*.ts"],
  "exclude": ["node_modules/**/*"]
}
