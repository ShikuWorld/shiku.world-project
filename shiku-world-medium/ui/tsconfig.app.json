{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["../shared/**/*.ts", "../client/**/*.ts", "env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "moduleResolution": "Node",
    "verbatimModuleSyntax": false,
    "rootDir": "..",
    "baseUrl": "..",
    "types": ["@types/twitch-ext"],
    "paths": {
      "@/editor/*": ["ui/src/*"],
      "@/client/*": ["client/*"]
    }
  }
}
