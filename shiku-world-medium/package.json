{
  "name": "medium",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "client",
    "ui"
  ],
  "scripts": {
    "env": "ts-node-script scripts/main.ts env",
    "build-ui": "cd ./ui && yarn run build",
    "start-ui": "cd ./ui && yarn run dev",
    "build-code": "ts-node-script scripts/main.ts build",
    "copy-to-ui": "ts-node-script scripts/main.ts copy-to-ui",
    "copy-statics": "ts-node-script scripts/main.ts copy-statics",
    "clear-build": "ts-node-script scripts/main.ts clear-build",
    "build": "yarn run clear-build && yarn run build-code && yarn run build-ui && yarn run copy-statics",
    "serve-build": "npx http-server -o build -p 8080",
    "watch": "yarn run build && ts-node-script scripts/main.ts watch-everything",
    "eslint": "eslint --ext .js,.ts",
    "hot-reload": "ts-node-script scripts/main.ts hot-reload"
  },
  "devDependencies": {
    "@types/eslint": "^8.44.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.19.2",
    "install-peers": "^1.0.4",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vue-eslint-parser": "^9.3.2"
  }
}
