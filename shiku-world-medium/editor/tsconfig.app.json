{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["../shared/**/*.ts", "env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/client/*": ["../client/*"],
      "@/gui/*": ["../gui/src/*"],
      "@/editor/*": ["../editor/src/*"],
      "@/shared/*": ["../shared/*"]
    }
  }
}
